#!/bin/bash

b=$(printf "cursor-raton\\ncursor-escribir\\n" | fzf --cycle --reverse)
[ -z "$b" ] && exit 1
case $b in
	"cursor-escribir") a=$( fzf --cycle --reverse <<- EOF
		bloque parpadeante
		bloque estatico
		raya parpadeante
		raya estatica
		barra fina parpadeante
		barra fina estatica
		EOF
		)	
	case $a in
		"bloque parpadeante") echo -e -n "\x1b[\x30 q";; # changes to blinking block
		"") echo -e -n "\x1b[\x31 q";; # changes to blinking block also
		"bloque estatico") echo -e -n "\x1b[\x32 q";; # changes to steady block
		"raya parpadeante") echo -e -n "\x1b[\x33 q";; # changes to blinking underline
		"raya estatica") echo -e -n "\x1b[\x34 q";; # changes to steady underline
		"barra fina parpadeante") echo -e -n "\x1b[\x35 q";; # changes to blinking bar
		"barra fina estatica") echo -e -n "\x1b[\x36 q";; # changes to steady bar
	esac ;;
	"cursor-raton") a=$(dmenu -l 10 -p pointer <<- EOF
		flecha-izquierda
		flecha-centro
		flecha-derecha
		cross
		plus
		EOF
		)
	case $a in
		"flecha-izquierda") xsetroot -cursor_name left_ptr;;
		"flecha-centro") xsetroot -cursor_name center_ptr;;
		"flecha-derecha") xsetroot -cursor_name right_ptr;;
		"cross") xsetroot -cursor_name cross;;
		"plus") xsetroot -cursor_name plus;;
	esac ;;
esac

